<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/no_internet_connection_img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_no_internet_connection"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.32999998" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/no_internet_connection_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="28sp"
        android:textColor="@android:color/holo_red_dark"
        tools:text="No Internet Connection"
        app:layout_constraintTop_toBottomOf="@id/no_internet_connection_img"
        app:layout_constraintStart_toStartOf="@id/no_internet_connection_img"
        app:layout_constraintEnd_toEndOf="@id/no_internet_connection_img"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/no_internet_clear_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Ok try Again"
        app:layout_constraintTop_toBottomOf="@id/no_internet_connection_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>